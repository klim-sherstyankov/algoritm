{% extends 'base.html.twig' %}

{% block title %}сортировка{% endblock %}

{% block body %}
    <div class="wrapper">
        {% if form is not defined %}
           <h1>Пузырьковая сортировка</h1>
           <div class="arraySort">
               {% for array in bubbleArray %}
                    {{ array }}
               {% endfor %}
           </div>
           <div>
               Затраты памяти - {{ bubbleMemory }} байт
           </div>
           <div>
               Затраты времени - {{ bubbleTime }} микросекунд
           </div>
           {# сортировка пузырьком 2 способ #}
           <h1>Пузырьковая сортировка - второй вариант</h1>
           <div class="arraySort">
               {% for array in bubbleSecondArray %}
                    {{ array }}
               {% endfor %}
           </div>
           <div>
               Затраты памяти - {{ bubbleSecondMemory }} байт
           </div>
           <div>
               Затраты времени - {{ bubbleSecondTime }} микросекунд
           </div>

           {# Сортировка перемешиванием #}
           <h1>Сортировка перемешиванием</h1>
           <div class="arraySort">
               {% for item in sheykArray %}
                    {{ item }}
               {% endfor %}
           </div>
           <div>
               Затраты памяти - {{ sheykMemory }} байт
           </div>
           <div>
               Затраты времени - {{ sheykTime }} микросекунд
           </div>

           {# Сортировка вставкой #}
           <h1>Сортировка вставкой</h1>
           <div class="arraySort">
               {% for item in insertArray %}
                    {{ item }}
               {% endfor %}
           </div>
           <div>
               Затраты памяти - {{ insertMemory }} байт
           </div>
           <div>
               Затраты времени - {{ insertTime }} микросекунд
           </div>

           {# Сортировка выбором #}
           <h1>Сортировка выбором</h1>
           <div class="arraySort">
               {% for item in choiceArray %}
                    {{ item }}
               {% endfor %}
           </div>
           <div>
               Затраты памяти - {{ choiceMemory }} байт
           </div>
           <div>
               Затраты времени - {{ choiceTime }} микросекунд
           </div>
        {% else %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}
